module.exports = function({ envIsTest }) {
  let config = {
    isNode: <%= input.isNode ? 'true': 'false' %>,
    isLibrary: <%= input.isLibrary ? 'true': 'false' %>,
    id: "<%= input.id %>",
    useHot: true,
    devServerPort: <%= input.devServerPort %>
  };

  config.useWorkBox = !config.isLibrary;
  config.useHtmlCreation = !config.isLibrary;
  config.useCodeSplitting = !config.isLibrary;
  config.excludeExternals = envIsTest || config.isNode;

  return config;
};
